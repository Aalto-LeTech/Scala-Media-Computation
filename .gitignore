#
# File ignoration patterns for Git
#
# The idea here is to explicitly ignore everything,
# except the exact files allowed to be checked in.
#

/*

!/.idea
!/node_modules
!/project
!/smcl-bitmap-viewer
!/smcl-core
!/smcl-library-info
!/.gitattributes
!/.gitignore
!/build.sbt
!/CHANGELOG
!/CODE_OF_CONDUCT.md
!/CONTRIBUTING.md
!/LICENSE
!/package.json
!/README.md

/.idea/libraries
/.idea/modules
/.idea/misc.xml
/.idea/modules.xml
/.idea/sbt.xml
/.idea/scala_compiler.xml
/.idea/tasks.xml
/.idea/workspace.xml

/project/*
!/project/build.properties
!/project/plugins.sbt

/smcl-library-info/*
!/smcl-library-info/src

/smcl-bitmap-viewer/*
!/smcl-bitmap-viewer/js
!/smcl-bitmap-viewer/jvm
!/smcl-bitmap-viewer/shared
!/smcl-bitmap-viewer/root-doc.txt

/smcl-bitmap-viewer/js/*
/smcl-bitmap-viewer/jvm/*
/smcl-bitmap-viewer/shared/*
!/smcl-bitmap-viewer/js/src
!/smcl-bitmap-viewer/jvm/src
!/smcl-bitmap-viewer/shared/src

/smcl-core/*
!/smcl-core/js
!/smcl-core/jvm
!/smcl-core/shared
!/smcl-core/root-doc.txt

/smcl-core/js/*
/smcl-core/jvm/*
/smcl-core/shared/*
!/smcl-core/js/src
!/smcl-core/jvm/src
!/smcl-core/shared/src

**/.git/*
**/.history/*
**/__pycache__/*
**/*___jb_tmp___
**/.cache-main
**/.DS_Store
**/*.bak
**/*.class
**/*.log
**/*.pyc
**/*.pyo
**/*~
